<Page
    x:Class="TestEnvironment.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestEnvironment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:UWPEnhanced.Controls"
	xmlns:converters="using:UWPEnhanced.ValueConverters"
	xmlns:xaml="using:UWPEnhanced.Xaml"
    mc:Ignorable="d"
	Name="page">

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ms-appx:///UwpEnhanced/Controls/Icon/Styles/IconWithAnimatedBorderStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid Name="RootGrid" Background="Wheat">

		<Rectangle Width="50" Height="50" x:Name="rect"/>

		<controls:Icon Style="{StaticResource IconWithAnimatedBorderStyle}"
			Glyph="&#xE705;"
			Command="{x:Bind command}"
			IsEnabled="False"
			FontSize="100"/>

		<controls:ItemsContainer HorizontalAlignment="Stretch" ItemSpacing="50" FlowDirection="TopToBottom" BorderBrush="Black"
		BorderThickness="2" VerticalAlignment="Bottom">  
			<Rectangle Width="50" Height="50" Fill="Red"/>
			<Rectangle Width="50" Height="50" Fill="Green" Visibility="Visible"/>
			<Rectangle Width="50" Height="50" Fill="Blue"/>
		</controls:ItemsContainer>



		
		<controls:Menu x:Name="menu" Position="Left" Background="Azure" Padding="0"
		IconsPanelPadding="2"
		IconsPanelLength="50"
		BorderThickness="2"
		IconsSpacing="50"
		FontSize="22"
		EnableMenuReposition="True"
		SeparatorThickness="0"
		ContentLength="300"
		BorderBrush="Black" Margin="0,0,0,0" >
			
				<Rectangle Fill="Green" controls:Menu.Glyph="&#xE700;" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
				controls:Menu.Image="ms-appx:///Assets/LockScreenLogo.scale-200.png"/>
				<Rectangle Fill="Red" controls:Menu.Glyph="&#xE700;" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
				/>
				<TextBlock Text="sad" controls:Menu.Glyph="&#xE705;"/>
				<TextBlock Text="sad" controls:Menu.Glyph="&#xE705;"/>


		</controls:Menu>
		

