<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:UWPEnhanced.Controls">



	<Style TargetType="controls:Menu">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:Menu">

					<Grid HorizontalAlignment="Left">

						<Grid.Resources>
				
							
						</Grid.Resources>

						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>


						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>


						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup>

								


								<VisualState x:Name="LeftOpen">
									<VisualState.Setters>
										<Setter Target="IconsPresenter.Grid.Column" Value="0"/>
										<Setter Target="ContentPresenter.Grid.Column" Value="1"/>
										
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="LeftClosed">
									<VisualState.Setters>
										<Setter Target="IconsPresenter.Grid.Column" Value="0"/>
										<Setter Target="ContentPresenter.Grid.Column" Value="1"/>
										<Setter Target="ContentPresenter.Width" Value="0"/>
										<Setter Target="IconsPresenter.Width" Value="10"/>
										<Setter Target="ContentPresenter.Width" Value="10"/>
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="TopOpen">
								</VisualState>
								<VisualState x:Name="TopClosed">
								</VisualState>
								<VisualState x:Name="RightOpen">
								</VisualState>
								<VisualState x:Name="RightClosed">
								</VisualState>
								<VisualState x:Name="BottomOpen">
								</VisualState>
								<VisualState x:Name="BottomClosed">
								</VisualState>

								<VisualStateGroup.Transitions>
									<VisualTransition From="LeftOpen" To="LeftClosed">
									
									</VisualTransition>

									<VisualTransition From="LeftClosed" To="LeftOpen">

									</VisualTransition>
								</VisualStateGroup.Transitions>

							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>


						<Grid Name="IconsPresenter" Background="Red" Width="{TemplateBinding IconsPanelLength}" Height="200">
						
						</Grid>

						<Grid Name="ContentPresenter" Background="Green" Width="{TemplateBinding ContentLength}" Height="200">
						
						</Grid>




					</Grid>


					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


</ResourceDictionary>
